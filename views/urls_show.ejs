<%- include('./partials/head') %>
    <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">TinyURL for: <%= longURL.longURL %></h5>
        <p class="card-text">
          Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a>
        </p>
      </div>
      <div class="card-footer text-muted"></div>
    </div>

    <main style="margin: 1em">
      <h3>Edit TinyURL</h3>
      <form
        class="form-inline"
        action="/urls/<%= shortURL %>/edit"
        method="POST"
      >
        <div class="form-group mb-2">
          <label for="editlongURL">Update exiting URL:</label>
          <input
            class="form-control"
            type="text"
            name="editlongURL"
            value="<%= longURL.longURL %>"
            style="width: 300px; margin: 1em"
          />
          <% if (user) { %>
          <input type="hidden" name="userId" value="<%= user.id %>" />
          <% } %>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </main>

    <%- include('./partials/footer') %>